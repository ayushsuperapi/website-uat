{
    "functions": {
      "pages/**/*.js": {
        "maxDuration": 30
      },
      "app/**/*.js": {
        "maxDuration": 30
      }
    },
    "headers": [
      {
        "source": "/app/(.*)",
        "headers": [
            {
                "key": "X-Accel-Buffering",
                "value": "no"
              },
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          },
          {
            "key": "Connection",
            "value": "keep-alive"
          }
        ]
      }
    ]
  }